<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cont_nou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cipri.fitnesstracker.ContNou"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Nume"
            android:textColor="#FF0A8D"
            android:textSize="17dp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:id="@+id/et_nume"
           />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Prenume"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:id="@+id/et_prenume"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Sex"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Feminin"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Masculin"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Email"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:id="@+id/et_email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Inaltime"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/ed_inaltime"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Greutate"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/ed_greutate"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Nume utilizator"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/ed_nickname"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FF0A8D"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Parola"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>

    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2DB5C4"
        android:shadowDx="-1"
        android:shadowDy="-3"
        android:shadowRadius="11"
        android:layout_margin="10dp"
        android:text="Trimite"/>

</LinearLayout>
